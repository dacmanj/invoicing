
<%= f.simple_fields_for :contacts do |f| %>

  <div class="form-inputs">
    <%= f.input :suppress_account_name, as: :boolean, default: true %>
    <%= f.input :suppress_contact_name, as: :boolean %>
    <%= f.input :first_name, required: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :title, required: false %>
    <%= render 'address', :f => f %> 
    <%= f.input :active, as: :boolean, default: true %>
    <%= f.input :database_id, required: false%>
  </div>

<% end %>
