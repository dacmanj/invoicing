<h1>Accounts (Companies)</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= link_to account.name, edit_account_path(account) %></td>
    <td><%= link_to  content_tag(:i, "", class: "glyphicon glyphicon-trash glyphicon-trash-white"), account, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Account', new_account_path, :class => "btn btn-primary" %>
