<%= simple_form_for(@address) do |f| %>

  <div class="form-inputs">
    <%= f.association :contact, :as => :hidden %>
    <%= f.input :address_lines, :input_html => { :rows => "2" } %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :fax %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
