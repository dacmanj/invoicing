<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :title %>
    <%= f.input :suppress_account_name, as: :boolean, default: true %>
    <%= f.input :suppress_contact_name, as: :boolean %>
    <%= f.association :account, :collection => Account.all(:order => 'name') %>
    <%= render 'address', :f => f %> 
    <%= f.input :active %>
    <%= f.input :database_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
