<%= simple_form_for(@email_record, :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :account_id %>
    <%= f.input :invoice_id %>
    <%= f.input :email %>
    <%= f.input :cc %>
    <%= f.input :bcc %>
    <%= f.input :subject %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
