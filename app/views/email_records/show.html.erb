<div class="page-header">
  <h1 Email Record</h1>
</div>

<dl>
  <dt>Account:</dt>
  <dd><%= link_to @email_record.account.name, edit_account_path(@email_record.account_id) unless @email_record.account.blank? %></dd>

  <dt>Invoice:</dt>
  <dd><%= link_to @email_record.invoice.name, edit_invoice_path(@email_record.invoice_id) unless @email_record.invoice.blank?%></dd>

  <dt>Sent:</dt>
  <dd><%= @email_record.created_at.localtime.strftime("%m/%d/%Y at %l:%m:%S %p") %></dd>


  <dt>Email:</dt>
  <dd><%= @email_record.email %></dd>

  <dt>Subject:</dt>
  <dd><%= @email_record.subject %></dd>

  <dt>Message:</dt>
  <dd><%= @email_record.message.html_safe %></dd>

</dl>
