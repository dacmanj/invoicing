"Invoice #","A/R Account","Invoice Date","Company","Contact","Last Email","Total","Balance Due","JV Entry","Attachment URL"
<% @invoices.each do |inv| %>
"<%= inv.id %>","<%= inv.ar_account%>","<%=inv.date.strftime("%m/%d/%Y") unless inv.date.blank? %>","<%=inv.account.name unless inv.account.blank?%>","<%= "#{inv.primary_contact.first_name} #{inv.primary_contact.last_name}" unless inv.primary_contact.blank? %>","<%=inv.email_records.last.created_at.localtime.strftime("%m/%d/%Y") unless inv.email_records.blank?%>","<%=inv.total%>","<%=inv.balance_due(params[:balance_due_as_of_date]) %>",<%="INV%05i" % inv.id%>,<%=invoice_url inv.id, :format => :pdf %>
<% end %>