    <table width="100%">
      <tbody>
        <tr>
          <td>
               <%= image_tag( 'file://' + Rails.root.join('app', 'assets', 'images', 'logo.png').to_s, width: '129', height: '120') %>
          </td>
          <td>
            <center>
              <h4>PFLAG National<br>
              <i>Moving equality forward&hellip;</i><br>
              TAX ID # 95-3750694<br>
              Download our W9 at <a href="http://pflag.org/w9">pflag.org/w9</a></h4>
              <p>
                1828 L St NW, Ste 660<br>Washington, DC 20036<br>
                (202) 467-8180 | Fax: (202) 467-8194<br>
                <a href="mailto:info@pflag.org">INFO@PFLAG.ORG</a> | <a href="http://www.pflag.org">WWW.PFLAG.ORG</a>
              </p>
            </center>
          </td>
          <td id="invoice_info" class="col-xs-2" style="text-align: right;">
            <h2 style="color: gray;">INVOICE</h2>
            <p>Invoice #<span id="invoicenumber"><%= @invoice.id %></span></p>
            <p>Date: <span id="invoicedate"><%= l @invoice.date, :format => "%m/%d/%Y" %></span></p>
          </td>
        </tr>
      </tbody>
    </table>
    <table width="100%">
      <tbody>
        <tr>
          <td width="55%">
            <%= render 'contact', :contact => (Contact.find(@invoice.primary_contact_id) unless @invoice.primary_contact_id.blank?) || @invoice.contacts.first %>
          </td>
          <td width="45%">
            <p style="font-weight: bold;">MAKE CHECKS/REMITTANCE PAYABLE TO:<br>
            PFLAG National</p>
            <p>If you have any questions concerning this invoice, contact us at (202)-467-8180 or <a href="invoices@pflag.org?subject=Invoice%20%23<%=@invoice.id%>">invoices@pflag.org</a></p>
          </td>
        </tr>
      </tbody>
    </table>

    <table width="100%" class="lines">
          <%= render "invoices/lines", :lines => @invoice.lines %>      
    </table>

    <div style="text-align: right; background-color: #cccccc; padding: 5px;">
      	<h3>Total: <%=number_to_currency @invoice.total%></h3>
		</div>
