<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :account %>
    <%= f.association :lines %>

    <%= f.input :description, :input_html => { :class => 'tinymce', :rows => 10 }, :as => :text, :required => false %>
    <%= f.input :notes %>
    <%= f.input :revenue_gl_code %>
    <%= f.input :quantity %>
    <%= f.input :unit_price %>
    <%= f.input :item_image_url %>
    <%= f.input :expensify_id %>
    <%= f.input :recurring %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
