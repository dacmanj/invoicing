<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :revenue_gl_code %>
    <%= f.input :receivable_gl_code %>
    <%= f.input :quantity %>
    <%= f.input :unit_price %>
    <%= f.input :item_image_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
