<h1>Invoice items</h1>

<table class="table table-striped">
  <tr>
    <th>Description</th>
    <th>Revenue gl code</th>
    <th>Quantity</th>
    <th>Unit price</th>
    <th>Item image url</th>
    <th></th>

  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.description %></td>
    <td><%= item.revenue_gl_code %></td>
    <td><%= item.quantity %></td>
    <td><%= item.unit_price %></td>
    <td><%= item.item_image_url %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path, :class => "btn btn-primary" %>
