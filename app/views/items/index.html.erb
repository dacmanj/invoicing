<h1>Invoice Items</h1>

<%= form_tag edit_multiple_items_path do %>

  <table class="table table-striped">
    <tr>
      <th></th>
      <th>Account</th>
      <th>Invoice</th>
      <th>Description</th>
      <th>Notes</th>
      <th>Revenue GL Code</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th></th>
      <th></th>

    </tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= check_box_tag 'item_id[]', item.id, false %></td>
      <td><%= item.account.name unless item.account.blank? %></td>
      <td><%= item.line.invoice.id unless item.line.blank? || item.line.invoice.blank? %></td>
      <td><%= item.description %></td>
      <td><%= truncate(item.notes,:length => 30) %></td>
      <td><%= item.revenue_gl_code %></td>
      <td><%= item.quantity %></td>
      <td><%= item.unit_price %></td>
      <td>
          <%= link_to content_tag(:i, "", :class => "glyphicon glyphicon-file"), item.item_image_url, html_options = { :target => "_BLANK", :class => "btn btn-primary"} %>
          <%= link_to content_tag(:i, "", :class => "glyphicon glyphicon-pencil"), {:id => item.id,:action => "edit"}, :class => "btn btn-primary" %>
          <%= link_to content_tag(:i, "", :class => "glyphicon glyphicon-trash"), item, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
  </table>
  <div class="form-group col-md-2">
  <%= select_tag "account", options_for_select(Account.all.collect{ |a| [a.name, a.id] }), {:include_blank => true , :class => "select optional form-control"}%> 
  </div>

  <%= submit_tag "Apply Bulk Action", :class => "btn btn-danger" %>

<% end %>
<br />



<h2>New Items</h2>

<%= link_to 'New Item', new_item_path, :class => "btn btn-primary" %>

<h2>Import Items</h2>

<%= form_tag import_items_path, multipart: true do %>
  <div class="form-group">
    <%= file_field_tag :file, :class => "file_field_tag" %>
  </div>
  <div class="checkbox">
    <label>
     <%= check_box_tag :override, :class => "check_box" %> Update Duplicates
    </label>
  </div>
  <%= submit_tag "Import", :class => "btn btn-primary" %>
<% end %>