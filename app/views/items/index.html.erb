<h1>Listing items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Revenue gl code</th>
    <th>Receivable gl code</th>
    <th>Quantity</th>
    <th>Unit price</th>
    <th>Item image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.description %></td>
    <td><%= item.revenue_gl_code %></td>
    <td><%= item.receivable_gl_code %></td>
    <td><%= item.quantity %></td>
    <td><%= item.unit_price %></td>
    <td><%= item.item_image_url %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

