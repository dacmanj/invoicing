<%= simple_form_for(@line) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :item_id %>
    <%= f.input :quantity %>
    <%= f.input :unit_price %>
    <%= f.input :position, :collection => 1..((@line.invoice.lines.count unless @line.invoice.blank?) || 1) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
