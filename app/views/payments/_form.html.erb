<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :invoice_id %>
    <%= f.input :company_id %>
    <%= f.input :payment_date %>
    <%= f.input :payment_type %>
    <%= f.input :reference_number %>
    <%= f.input :amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
