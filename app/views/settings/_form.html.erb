<%= simple_form_for(@setting, :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :key %>
    <%= f.input :category, collection: [:string, :html] %>
    <% unless @setting.category == "string" %>
      <%= f.input :value, input_html: {class: "tinymce"} %>
    <% else %>
        <%= f.input :value %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
