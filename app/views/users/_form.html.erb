<%= simple_form_for(@user, :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f| %>
  <div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :provider %>
  <%= f.input :uid %>
  <%= f.association :roles %>
  <%= f.input :notify_on_all_actions %>
      
  </div>
  <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>
